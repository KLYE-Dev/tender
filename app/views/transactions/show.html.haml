#transactions
  .text-center= image_tag 'loading.gif'

:javascript
  $(document).on('ready turbolinks:load', function() {
    $.getJSON( document.location.href, function( data ) {
      formatter = new JSONFormatter(data.transactions);
      formatter.openAtDepth(5);
      $('#transactions').html(formatter.render());
    });
  });

