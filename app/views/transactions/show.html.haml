#transaction
  .text-center= image_tag 'loading.gif'

:javascript
  $(document).on('turbolinks:load', function() {
    $.getJSON( document.location.href, function( data ) {
      formatter = new JSONFormatter(data.transaction);
      formatter.openAtDepth(5);
      $('#transaction').html(formatter.render());
    });
  });

%hr

