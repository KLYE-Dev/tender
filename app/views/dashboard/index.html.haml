- cache head_block_num do
  .row
    .col-sm-9
      = render partial: '/transactions/transaction', collection: @transactions

      = will_paginate(@transactions, params: {controller: :transactions, action: :index, page: @page, per_page: @per_page}, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer)
    .col-sm-3
      .card.mb-3.shadow-sm
        %h3.card-header.bg-light Properties
        .card-body.bg-white
          %h3.card-title.lead Sidechain Time:
          %samp.card-text.float-right= Transaction.order(block_num: :desc).first.timestamp
        .card-body.bg-white
          %h3.card-title.lead Sidechain Head Block:
          %samp.card-text.float-right= link_to number_with_delimiter(head_block_num), b_path(head_block_num)
        .card-body.bg-white
          %h3.card-title.lead Tokens:
          %samp.card-text.float-right= link_to number_with_delimiter(TokensCreate.distinct(:symbol).count), tokens_path
        .card-body.bg-white
          %h3.card-title.lead Contracts:
          %samp.card-text.float-right= link_to number_with_delimiter((ContractDeploy.pluck(:name) + ContractUpdate.pluck(:name)).uniq.size), contracts_path
      
      - Rails.cache.fetch('contract_tree', expires_in: 1.hour) do
        - latest_transactions = Transaction.where('timestamp > ?', 24.hours.ago)
        - latest_transactions.order(:contract).distinct.pluck(:contract).each do |contract|
          - next if %w(null token).include? contract
          .card.mb-3.shadow-sm
            %h5.card-header.bg-light 
              = link_to contract, transactions_path(contract: contract)
            .card-body.bg-white
              - transactions = latest_transactions.where(contract: contract).distinct.order(:action)
              %ul.list-group
                - transactions.pluck(:action).each do |contract_action|
                  %li.list-group-item.d-flex.justify-content-between.align-items-center
                    = link_to contract_action, transactions_path(contract: contract, contract_action: contract_action)
                    .span.badge.badge-secondary.badge-pill= latest_transactions.where(contract: contract, action: contract_action).count
            .card-footer.bg-light
              %small.text-muted
                Since
                %time{data: {toggle: 'tooltip', placement: 'right'}, title: (timestamp = transactions.maximum(:created_at))}
                  = timestamp
