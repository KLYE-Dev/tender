#block
  .text-center= image_tag 'loading.gif'

:javascript
  $(document).on('ready turbolinks:load', function() {
    $.getJSON( document.location.href, function( data ) {
      formatter = new JSONFormatter(data.block);
      formatter.openAtDepth(3);
      $('#block').html(formatter.render());
    });
  });

%hr

